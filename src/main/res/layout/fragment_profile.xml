<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.porter.mobile.profile.ProfileFragment">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
      android:id="@+id/drawer_item_profile_pic"
      android:layout_width="120dp"
      android:background="@drawable/profile_pic"
      android:layout_gravity="center"
      android:layout_height="120dp"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/grey"
      android:padding="10dp">
      <com.porter.utils.PorterTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIGN IN DETAILS"
        style="@style/title_grey"/>
    </LinearLayout>
    <LinearLayout
      android:minHeight="50dip"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingLeft="15dip"
      android:paddingRight="15dip"
      android:gravity="center_vertical">
      <ImageView
        android:background="@drawable/email_icon2"
        android:layout_width="30dip"
        android:layout_height="20dip"/>
      <com.porter.utils.PorterTextView
        android:id="@+id/ride_location"
        android:layout_width="wrap_content"
        android:text="abhayverma@gmail.com"
        android:layout_marginLeft="15dip"
        style="@style/title_black"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/blue"/>
    <LinearLayout
      android:minHeight="50dip"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingLeft="15dip"
      android:paddingRight="15dip"
      android:gravity="center_vertical">
      <ImageView
        android:background="@drawable/lock_icon2"
        android:layout_width="30dip"
        android:layout_height="30dip"/>
      <com.porter.utils.PorterTextView
        android:layout_width="wrap_content"
        android:text="*********"
        android:layout_marginLeft="15dip"
        style="@style/title_black"
        android:layout_height="wrap_content"/>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right" >
        <ImageView
          android:layout_gravity="center_vertical"
          android:src="@drawable/pencil"
          android:layout_width="20dip"
          android:gravity="right"
          android:layout_height="26dip"/>
      </LinearLayout>
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/grey"
      android:padding="10dp">
      <com.porter.utils.PorterTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MY DETAILS"
        style="@style/title_grey"/>
    </LinearLayout>
    <LinearLayout
      android:minHeight="50dip"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingLeft="15dip"
      android:paddingRight="15dip"
      android:gravity="center_vertical">
      <ImageView
        android:background="@drawable/profile_icon"
        android:layout_width="30dip"
        android:layout_height="30dip"/>
      <com.porter.utils.PorterTextView
        android:layout_width="wrap_content"
        android:text="Abhay Verma"
        android:layout_marginLeft="15dip"
        style="@style/title_black"
        android:layout_height="wrap_content"/>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right" >
        <ImageView
          android:layout_gravity="center_vertical"
          android:src="@drawable/pencil"
          android:layout_width="20dip"
          android:gravity="right"
          android:layout_height="26dip"/>
      </LinearLayout>
    </LinearLayout>
    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/blue"/>
    <LinearLayout
      android:minHeight="50dip"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingLeft="15dip"
      android:paddingRight="15dip"
      android:gravity="center_vertical">
      <ImageView
        android:background="@drawable/phone_icon2"
        android:layout_width="30dip"
        android:layout_height="30dip"/>
      <com.porter.utils.PorterTextView
        android:layout_width="wrap_content"
        android:text="9871113452"
        android:layout_marginLeft="15dip"
        style="@style/title_black"
        android:layout_height="wrap_content"/>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right" >
        <ImageView
          android:layout_gravity="center_vertical"
          android:src="@drawable/verify_icon"
          android:layout_width="20dip"
          android:gravity="right"
          android:layout_height="26dip"/>
      </LinearLayout>
    </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|bottom"
    android:orientation="vertical">
    <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/navigation_background"
      android:text="@string/logout"
      android:textColor="@color/blue"
      android:layout_marginTop="10dp"/>
    </LinearLayout>
  </LinearLayout>

</FrameLayout>
