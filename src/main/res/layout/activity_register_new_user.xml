<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="match_parent">
  <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical">

    <com.porter.utils.PorterEditText
      android:id="@+id/first_name"
      android:layout_width="match_parent"
      android:drawableLeft="@drawable/user_icon"
      style="@style/edit_text"
      android:layout_marginTop="20dip"
      android:hint="First Name"/>

    <com.porter.utils.PorterEditText
      android:id="@+id/last_name"
      android:layout_width="match_parent"
      android:drawableLeft="@drawable/user_icon"
      style="@style/edit_text"
      android:hint="Last Name"/>

    <com.porter.utils.PorterEditText
      android:id="@+id/phone_no"
      android:layout_width="match_parent"
      android:drawableLeft="@drawable/phone_icon"
      style="@style/edit_text"
      android:hint="Phone No."/>

    <com.porter.utils.PorterEditText
      android:id="@+id/email_id"
      android:layout_width="match_parent"
      android:drawableLeft="@drawable/email_icon"
      style="@style/edit_text"
      android:hint="Email"/>

    <com.porter.utils.PorterEditText
      android:id="@+id/password"
      android:layout_width="match_parent"
      android:drawableLeft="@drawable/lock_icon"
      style="@style/edit_text"
      android:inputType="textPassword"
      android:hint="Password"/>

    <com.porter.utils.PorterEditText
      android:id="@+id/confirm_password"
      android:layout_width="match_parent"
      android:drawableLeft="@drawable/lock_icon"
      style="@style/edit_text"
      android:inputType="textPassword"
      android:hint="Confirm Password"/>

    <com.porter.utils.PorterButton
      android:layout_width="wrap_content"
      android:layout_height="45dip"
      android:layout_marginTop="20dip"
      style="@style/button"
      android:text="SIGN UP"/>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="20dip"
      android:gravity="center"
      android:visibility="gone"
      android:weightSum="2">
      <Button
        android:id="@+id/fb_signup"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:background="@drawable/fb_signup"
        android:layout_weight="1"
        android:padding="10dip"/>
      <Button
        android:id="@+id/gplus_signup"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:background="@drawable/gplus_signup"
        android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="20dip"
      android:gravity="right">
      <com.porter.utils.PorterTextView
        android:layout_width="wrap_content"
        android:text="ALREADY REGISTERED?"
        android:layout_marginRight="10dip"
        style="@style/label_blue"
        android:layout_height="wrap_content"/>
      <com.porter.utils.PorterButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="login"
        style="@style/button"
        android:text="LOG IN"/>
    </LinearLayout>
  </LinearLayout>
</ScrollView>

