<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="120dp"
        android:layout_width="match_parent"
        android:background="@color/navigation_divider"
        android:gravity="center_vertical">
  <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
      android:id="@+id/drawer_item_profile_pic"
      android:layout_width="120dp"
      android:background="@drawable/profile_pic"
      android:layout_height="120dp"/>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="120dp">
      <TextView
        android:id="@+id/drawer_item_user_name"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:text="Abhay Verma"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="120dp"
    android:layout_marginTop="70dp">
      <TextView
        android:id="@+id/drawer_item_user_city"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="@color/blue"
        android:textSize="12sp"
        android:text="Andheri, Mumbai"
        android:layout_height="wrap_content"/>
    </LinearLayout>
  </RelativeLayout>
</LinearLayout>


