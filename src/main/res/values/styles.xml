<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="action_bar_light" parent="@android:style/Widget.Holo.Light.ActionBar">
    <item name="android:background">@color/blue</item>
    <item name="android:titleTextStyle">@style/title_text</item>
    <item name="android:height">48dp</item>
  </style>

  <style name="title_text" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">20sp</item>
  </style>

  <style name="LightTextViewStyle" parent="android:Widget.TextView">
    <item name="android:textSize">14sp</item>
  </style>

  <style name="NavigationMenuitem">
    <item name="android:textSize">17sp</item>
    <item name="android:textColor">@color/blue</item>
  </style>

  <style name="edit_text">
    <item name="android:layout_height">45dip</item>
    <item name="android:layout_marginTop">10dip</item>
    <item name="android:padding">10dip</item>
    <item name="android:drawablePadding">10dip</item>
    <item name="android:background">@drawable/edittext_border</item>
    <item name="android:singleLine">true</item>
    <item name="android:lines">1</item>
    <item name="android:maxLines">1</item>
    <item name="android:scrollHorizontally">true</item>
    <item name="android:ellipsize">end</item>
  </style>

  <style name="button">
    <item name="android:layout_height">45dip</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:padding">10dip</item>
    <item name="android:paddingLeft">15dip</item>
    <item name="android:paddingRight">15dip</item>
    <item name="android:textSize">17sp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:background">@drawable/button_layout</item>
  </style>
</resources>
